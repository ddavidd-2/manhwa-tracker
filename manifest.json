{
    "manifest_version": 3,
    "name": "Manhwa Tracker",
    "version": "1.0",
    "description": "Automatically track progress of manhwa titles read on variety of sites",

    "action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "background"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}